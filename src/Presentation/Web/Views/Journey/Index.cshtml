@model JourneyViewModel


<div class="d-flex flex-column font-family-opensans">
    @foreach (var item in Model.Journey.Items)
    {
        <div class="d-flex flex-column p-2 mb-2 listItem position-relative">
            <div class="d-flex justify-content-between">
                <div class="d-flex text-primary">
                    <div class="d-flex flex-column text-center pr-2">
                        <span class="small70">KALKIŞ</span>
                        <span class="large font-weight-bold"> @item.Departure.ToString("hh:mm") </span>
                    </div>
                    <div class="d-flex mb-1  align-items-end">
                       <img src="img/img5.png"/>
                    </div>
                    <div class="d-flex flex-column text-center pl-2">
                        <span class="small70">VARIŞ</span>
                        <span class="large font-weight-bold"> @item.Arrival.ToString("hh:mm") </span>
                    </div>
                </div>
                <div class=" ">
                    <span class="d-flex badge   badge-danger font-weight-normal small90  pl-3 pr-3 p-2">
                        @item.InternetPrice.ToString("#.00") @item.Currency
                    </span>
                </div>
            </div>
            <div class="text-left d-flex text-secondary font-weight-normal mt-1 small90">
                @item.Origin - @item.Destination
            </div>
            <a class="stretched-link" target="_blank" asp-action="RedirectExternal" asp-controller="Journey" asp-route-originId="@item.OriginLocationId" 
            asp-route-destinationId="@item.DestinationLocationId" asp-route-journeyId="@item.Id" asp-route-departureDate="@item.Departure.ToString("yyyy-MM-dd")"></a>
        </div>
    }
</div>




@section Header
        {
<div class="d-flex flex-row p-0 font-family-opensans">
    <a href="" class="pl-2 pr-2 mr-3 text-white"> <img src="img/img4.png"/> </a>
    <div class="text-left text-white font-weight-normal d-flex flex-column w-100">
        <span> @Model.Header.Title </span>
        <span class="small90 mt-1"> @Model.Header.Date </span>
    </div>
</div>
        }
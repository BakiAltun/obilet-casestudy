@using OBilet.CaseStudy.ApplicationCore.Queries
@using System.Globalization
@model SearchLocationViewModel

<form method="get" asp-action="Redirect" asp-controller="Journey">
    <div data-search-location>
        <div class="d-flex flex-row align-items-end bg-white own-select" data-select data-to>
            <div class="pl-1 pr-1 pb-3 pt-0"> <img src="img/img3.png"/> </div>
            <div class="p-2 d-flex flex-column w-100">
                <span class="text-primary">Nereden</span>
                <input type="hidden" asp-for="OriginId" data-select-value />
                <input class="input-noborder d-block mt-1 pt-1 pb-1" asp-for="Origin" readonly data-search data-select-text  autocomplete="off"/>
                <div class="results" data-results> 
                </div>
                @*<select class="input-noborder d-block mt-1 pt-1 pb-1" asp-items="Model.Locations" asp-for="OriginId" data-to> </select>*@
            </div>
        </div>
        <div class="d-flex mb-1 justify-content-end position-relative"> <a href='javascript:;' data-switch class="position-absolute bg-white rounded-circle pl-2 pt-1 pb-1 pr-2 mr-3 border" style="top:-15px;z-index:9"> <img src="img/img1.png"/> </a>    </div>
        <div class="d-flex flex-row align-items-end bg-white own-select" data-select data-from>
            <div class="pl-1 pr-1 pb-3 pt-0"> <img src="img/img3.png"/> </div>
            <div class="p-2 d-flex flex-column w-100 ">
                <span class="text-primary">Nereye</span>
                <input type="hidden" asp-for="DestinationId" data-select-value />
                <input class="input-noborder d-block mt-1 pt-1 pb-1" asp-for="Destination" readonly data-search data-select-text  autocomplete="off"/>
                <div class="results" data-results> 
                </div>
                @*<select class="input-noborder d-block mt-1 pt-1 pb-1" asp-items="Model.Locations" asp-for="DestinationId" data-from> </select>*@
            </div>
        </div>
    </div>
    <div class="d-flex mb-4"></div>
    <div class="d-flex flex-row bg-white" data-search-datepicker>
        <div class="pl-1 pr-1 pb-4 pt-0 d-flex align-items-end"> <img src="img/img2.png"/> </div>
        <div class="p-2 d-flex flex-column mr-auto">
            <span class="text-primary">Tarih</span>
            <input type="hidden" asp-for="DepartureDate" data-input value="@Model.DepartureDate.ToString("yyyy-MM-dd")" />
            <input type="text" value="@Model.DepartureDate.ToString("dd MMMM yyyy dddd", new CultureInfo("tr-TR"))" data-picker class="input-noborder  pt-1 pb-1 w-100" readonly />
        </div>
        <div class="p-2 d-flex flex-column">
            <a href="javascript:;" class="btn btn-xs btn-outline-secondary active mb-2" data-today>Bugün</a>
            <a href="javascript:;" class="btn btn-xs btn-outline-secondary" data-tomorrow>Yarın</a>
        </div>
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary w-75">Bileti Bul</button>
    </div>

</form>
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <title>OBilet Case Study</title>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/site.css" />
    <link rel="stylesheet" href="lib/jqueryui-datepicker/jquery-ui.css" />
</head>
<body>

    <div class="container-obilet">

        <header class="bg-primary p-3">
            @await RenderSectionAsync("Header", required: false)
        </header>
        <main class="d-flex flex-column p-3">
            @RenderBody()
        </main>
        <footer class="d-flex flex-column p-3 small text-secondary bg-white border-bottom">
            @await RenderSectionAsync("Footer", required: false)
        </footer>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/jqueryui-datepicker/jquery-ui.js" asp-append-version="true"></script>
    <script src="lib/jqueryui-datepicker/datepicker-tr.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/select.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function bind(){
           var headElement = document.getElementsByTagName("head")[0];
           headElement.appendChild(getLinkElement("https://fonts.googleapis.com/css2?&family=Roboto:wght@300;400;500;700&display=swap"));
           headElement.appendChild(getLinkElement("https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;700&display=swap"));
        }

        function getLinkElement(href)
        {
            var element =  document.createElement("link");
            element.setAttribute("rel","stylesheet");
            element.setAttribute("href", href);
            return element;
        }

        (function() {
             bind();
        })(); 

    </script>
</body>
</html>
